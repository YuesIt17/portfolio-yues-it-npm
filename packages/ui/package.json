    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "*",
    "react-dom": "*",
    "rollup": "*",
    "rollup-plugin-dts": "*",
    "rollup-plugin-peer-deps-external": "*",
    "rollup-plugin-terser": "*"
